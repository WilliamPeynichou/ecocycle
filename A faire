-Installer n8n en local et configurer mon agent en Local via llm OpenIA
-BDD
-Creer une API de ma table produit pour la mettre en outil a mon agent
-Lieer mon agent a l'API pour y definir

1
SELECT id_client, nom, ville 
FROM clients;

2
SELECT *
FROM clients
WHERE ville = "Paris";

3
SELECT prix
FROM produits
ORDER BY prix ASC;

4
SELECT prix
FROM produits 
ORDER BY prix DESC 
LIMIT 3;

5
SELECT c.id_commande, c.date_commande, cl.nom, c.montant_total
FROM commandes c
INNER JOIN clients cl ON c.id_client = cl.id_client;


6
SELECT p.id_produit, p.nom, p.prix
FROM produits p
INNER JOIN commandes_produits cp ON p.id_produit = cp.id_produit
INNER JOIN commandes c ON cp.id_commande = c.id_commande
WHERE c.date_commande BETWEEN '2024-01-01' AND '2024-12-31';

7
SELECT c.id_client, c.nom, c.ville
FROM clients c
INNER JOIN commandes co ON c.id_client = co.id_client
WHERE co.date_commande BETWEEN '2024-01-01' AND '2024-12-31';


